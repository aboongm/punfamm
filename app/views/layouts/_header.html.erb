<section class="bg-slate-900">
    <div class="flex justify-center items-center">
        <%= image_tag 'punfamm-top-ads-space.png', alt: 'top ads', class: 'top-ads m-5' %>  
    </div>
</section>
<header id="header" class="bg-slate-900 screen-sm-md-padding" data-controller="header" >
    <div class="container mx-auto bg-slate-900 flex items-center justify-between h-12">
        <div class="text-white flex items-center justify-between">
            <button id="bgIcon" data-header-target="openMenu" tabindex="-1" class="">
                <svg class="menu-icon" style="outline:0" width="24" height="24" viewBox="0 0 64 64" fill="currentColor" tabindex="0" focusable="true" xmlns="https://www.w3.org/2000/svg" aria-labelledby="menuIconTitle" role="img">
                    <title id="menuIconTitle">Open Menu</title>
                    <path d="M52.75,47.84H11.25a2.08,2.08,0,1,0,0,4.16h41.5a2.08,2.08,0,1,0,0-4.16Z"></path>
                    <path d="M52.75,28.92H11.25a2.08,2.08,0,1,0,0,4.16h41.5a2.08,2.08,0,1,0,0-4.16Z"></path>
                    <path d="M11.25,14.16h41.5a2.08,2.08,0,1,0,0-4.16H11.25a2.08,2.08,0,1,0,0,4.16Z"></path>
                </svg>
            </button>
            <%= link_to '#' do %>
                <%= image_tag 'logo.png', alt: 'Punfamm logo', class: 'w-24 mx-3.5' %>               
            <% end %>
            <div class="mx-3  text-sm header-items" >
                <%= link_to "World", pages_world_path, class: "mx-3 hover:border-b-4 hover:border-red-600 pb-1" %>                    
            </div>
            <div class="mx-3 text-sm header-items" >
                <%= link_to "Politics", pages_politics_path, class: "mx-3 hover:border-b-4 hover:border-red-600 pb-1" %>
            </div>
            <div class="mx-3 text-sm header-items" >
                <%= link_to 'Business', pages_business_path, class: "mx-3 hover:border-b-4 hover:border-red-600 pb-1" %>
            </div>
            <div class="mx-3 text-sm header-items" >
                <%= link_to 'Health' , pages_health_path, class: "mx-3 hover:border-b-4 hover:border-red-600 pb-1" %>
            </div>
            <div class="mx-3 text-sm header-items" >
                <%= link_to 'More', class: "mx-3 hover:border-b-4 hover:border-red-600 pb-1" %>
            </div>
        </div>
        <div class="text-white flex items-center justify-between">
            <button data-header-target="searchNews" class="mx-3">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
                    <path fill-rule="evenodd" d="M10.5 3.75a6.75 6.75 0 100 13.5 6.75 6.75 0 000-13.5zM2.25 10.5a8.25 8.25 0 1114.59 5.28l4.69 4.69a.75.75 0 11-1.06 1.06l-4.69-4.69A8.25 8.25 0 012.25 10.5z" clip-rule="evenodd" />
                </svg>
            </button>
            <button 
                data-header-target="userAuthLink" 
                class="border border-slate-50 rounded px-1 py-0.5 text-sm"
            >
                Log in
            </button>
            <div data-controller="hello" class="lg:col-span-3 flex items-center justify-end">
                <% if current_user  %>
                    <% if current_user.first_name?  %>
                        <img data-action="click->hello#profileDropdown" class="w-10 h-10 rounded-full" src="<%= url_for(current_user.image) %>" alt="Default avatar">
                    <% else %>
                        <div data-action="click->hello#profileDropdown" class="w-10 h-10 rounded-full bg-slate-700 text-white font-bold menuAvatar"><h1>EA</h1></div>
                    <% end %>
                <% else  %>
                    <div class="w-10 h-10 rounded-full bg-slate-700 text-white font-bold menuAvatar"><h1>EA</h1></div>
                <% end %>
            </div>  
        </div>
    </div>
</header>
<%= render 'shared/modal', modal_trigger_id: "user-auth-modal-trigger", modal_content: 'shared/user_auth_form' %>
<%= render 'shared/menu' %>